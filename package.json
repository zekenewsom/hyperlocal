{
  "name": "hyperlocal",
  "private": true,
  "packageManager": "pnpm@9.8.0",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "typecheck": "pnpm -r typecheck",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "ci": "pnpm typecheck && pnpm lint && pnpm test && pnpm check:forbidden",
    "check:forbidden": "node scripts/forbidden-check.cjs",
    "db:init": "hyperlocal db:init",
    "storage:seed": "hyperlocal storage:seed",
    "storage:verify": "hyperlocal storage:verify"
  },
  "dependencies": {
    "duckdb": "^1.0.0",
    "parquets": "^0.10.10",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "tsx": "^4.16.2",
    "vitest": "^1.6.0",
    "@vitest/ui": "^1.6.0",
    "typescript": "^5.4.2",
    "globby": "^14.0.1",
    "@hyperlocal/cli": "workspace:*"
  }
}
